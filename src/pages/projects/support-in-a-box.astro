}

.hero-content {
  background: transparent;
  padding: 0;
  border-radius: 0;
  box-shadow: none;
  backdrop-filter: none;
}

.hero-banner h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  text-shadow: 0 2px 4px rgba(0,0,0,.5);
}

.hero-banner p {
  font-size: 1.25rem;
  max-width: 700px;
  margin: 0 auto;
  text-shadow: 0 1px 3px rgba(0,0,0,.5);
}
</style>




  <!-- HERO -->
