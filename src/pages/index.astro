---
import BaseLayout from "../layouts/BaseLayout.astro";

const site = {
  name: "Tom Sullivan",
  title: "Tom Sullivan | Portfolio",
  role: "Digital Creator & Developer",
  blurb:
    "I build software, AI agents, and digital experiences across wildlife triage, treasure hunting, and poker analytics.",
  email: "tsullivan79@gmail.com",
  url: "https://www.itstomsullivan.com",
  social: {
    github: "https://github.com/tomsullivan79",
    linkedin: "https://www.linkedin.com/in/work-with-tom-sullivan/",
  },
};

const projects = [
  {
    title: "PokerScout",
    summary:
      "AI analyst that ingests a Hendon Mob player profile URL and outputs a standardized scouting dossier.",
    tags: ["Agent.AI", "LLM", "Prompt Engineering", "Data Parsing", "HTML/Templating", "Analytics"],
    href: "/projects/pokerscout",
  },
];
---

<BaseLayout title={site.title}>
  <section class="hero">
    <div>
      <div class="kicker">Portfolio</div>
      <h1 style="margin:6px 0 10px; font-size:2.1rem">{site.name}</h1>
      <p style="color:var(--muted)">{site.role}</p>
      <p style="max-width:60ch">{site.blurb}</p>
      <div style="display:flex; gap:10px; margin-top:12px">
        <a href="#projects" class="btn">View Projects</a>
        <a href="#contact" class="btn" style="background:linear-gradient(180deg, var(--accent), #7f68ff)">Contact</a>
      </div>
    </div>

    <div class="glass" style="padding:16px">
      <ul class="meta">
        <li class="chip">Agents & Automation</li>
        <li class="chip">Python • Voiceflow • ArcGIS</li>
        <li class="chip">Oak Grove, MN</li>
        <li class="chip"><a href={`mailto:${site.email}`}>Email me</a></li>
      </ul>
    </div>
  </section>

  <!-- Projects -->
  <section id="projects" class="section">
    <h2 class="section-title">Projects</h2>
    <div class="grid-2">
      {projects.map((p) => (
        <article class="glass" style="padding:18px">
          <header style="display:flex; align-items:flex-start; justify-content:space-between; gap:14px">
            <h3 style="margin:0; font-size:1.2rem">
              <a href={p.href} style="text-decoration:none; color:inherit">{p.title}</a>
            </h3>
          </header>
          <p style="margin-top:8px">{p.summary}</p>
          <ul style="display:flex; flex-wrap:wrap; gap:8px; list-style:none; margin:12px 0 0; padding:0">
            {p.tags.map((t) => (<li class="chip">{t}</li>))}
          </ul>
          <footer style="margin-top:12px; display:flex; gap:12px; align-items:center">
            <a href={p.href} style="margin-left:auto; color:var(--muted); text-decoration:none">Details →</a>
          </footer>
        </article>
      ))}
    </div>
  </section>

  <!-- About -->
  <section id="about" class="section">
    <h2 class="section-title">About</h2>
    <div class="grid-2">
      <div class="glass" style="padding:18px">
        <p>
          I'm Tom, a builder focused on practical AI agents, mapping/GIS, and poker tooling.
          I like shipping useful things fast, then iterating.
        </p>
        <ul class="bullets-tight" style="margin-left:1.2em">
          <li>Developing a wildlife triage agent with MMS photo intake and status automation.</li>
          <li>Exploring digital artifacts—shareable 3D/2D captures for remote analysis and storytelling.</li>
          <li>Long-time poker student; building study tools for mixed games like Razz.</li>
        </ul>
      </div>
      <aside class="glass" style="padding:18px">
        <h3 class="card-title" style="margin:0 0 8px; font-size:1.05rem">Quick links</h3>
        <ul class="bullets-tight" style="margin-left:1.2em">
          <li><a class="hover:underline" href="/resume.pdf">Résumé (PDF)</a></li>
          <li><a class="hover:underline" href="/now">Now</a></li>
          <li><a class="hover:underline" href="/uses">Uses / Stack</a></li>
        </ul>
      </aside>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="section">
    <h2 class="section-title">Contact</h2>
    <div class="grid-2">
      <div class="glass" style="padding:18px">
        <p class="mb-3">For freelance/consulting, briefly describe your project, timeline, and budget range.</p>
        <ul class="bullets-tight" style="margin-left:1.2em">
          <li>AI agent prototypes (chat/voice, SMS/MMS).</li>
          <li>GIS workflows and field data capture.</li>
          <li>Web apps and small automations.</li>
        </ul>
        <p style="margin-top:12px">Prefer email? <a class="underline" href={`mailto:${site.email}`}>{site.email}</a></p>
      </div>
      <div class="glass" style="padding:18px">
        <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don’t fill this out: <input name="bot-field" /></label>
          </p>
          <label class="block text-sm">Name<input name="name" required style="display:block; width:100%; margin-top:6px; border-radius:10px; background:#0f1a2a; padding:10px; border:1px solid #26324a" /></label>
          <label class="block text-sm" style="margin-top:10px">Email<input name="email" type="email" required style="display:block; width:100%; margin-top:6px; border-radius:10px; background:#0f1a2a; padding:10px; border:1px solid #26324a" /></label>
          <label class="block text-sm" style="margin-top:10px">Message<textarea name="message" rows="5" required style="display:block; width:100%; margin-top:6px; border-radius:10px; background:#0f1a2a; padding:10px; border:1px solid #26324a"></textarea></label>
          <button type="submit" class="btn" style="margin-top:12px">Send</button>
        </form>
      </div>
    </div>
  </section>

  <footer class="footer-border" style="margin-top:24px">
    <div class="wrap" style="padding-left:0;padding-right:0">
      <p style="color:var(--muted); font-size:.95rem">© {new Date().getFullYear()} {site.name}. Built with Astro · Deployed on Netlify.</p>
    </div>
  </footer>
</BaseLayout>
